extends ../base
include ../mixins/video

block content 
    div.profile__data
        if user.socialOnly
            img(src=`${user.avatarUrl}`, crossorigin).avatar
        else 
            img(src=`${user.avatarUrl}`, crossorigin).avatar
        h3=user.username
    div.video-grid
        each v in user.videos    
            +video(v)
        else 
            span.empty__message No videos found